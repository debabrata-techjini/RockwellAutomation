<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_header_height"
    android:layout_marginLeft="@dimen/list_header_left_margin"
    android:layout_marginStart="@dimen/list_header_left_margin"
    android:layout_marginTop="@dimen/list_header_top_margin"
    android:background="@color/listHeaderBackgroundColor"
    android:gravity="center_vertical|end"
    android:orientation="horizontal"
    >

  <TextView
      android:id="@+id/textViewExpandAll"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/expand_all_text_bottom_margin"
      android:layout_marginEnd="@dimen/expand_all_text_right_margin"
      android:layout_marginRight="@dimen/expand_all_text_right_margin"
      android:layout_marginTop="@dimen/expand_all_text_top_margin"
      android:clickable="true"
      android:text="@string/expand_all"
      android:textColor="@drawable/clickable_text_color_selector"
      android:textSize="@dimen/expand_all_text_size"
      style="@style/TextFontFamilyRobotoLight"
      />

</LinearLayout>