<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    tools:context="com.techjini.rockwellautomation.setting.SettingsFragment"
    >

  <android.support.v7.widget.CardView
      android:layout_width="@dimen/card_view_width"
      android:layout_height="@dimen/card_view_height"
      android:layout_gravity="center_horizontal|center_vertical"
      card_view:cardCornerRadius="@dimen/card_corner_radius"
      card_view:cardElevation="@dimen/card_elevation"
      style="?attr/cardStyle"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="@dimen/layout_padding"
          >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/widget_margin"
            android:layout_marginLeft="@dimen/widget_margin"
            android:layout_marginRight="@dimen/widget_margin"
            android:layout_marginTop="@dimen/widget_margin"
            android:gravity="center_horizontal"
            android:text="@string/setting_title"
            android:textColor="@android:color/black"
            android:textSize="@dimen/setting_title_text_size"
            android:textStyle="bold"
            />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:padding="@dimen/layout_padding"
          >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/widget_margin"
            android:layout_marginLeft="@dimen/widget_margin"
            android:layout_marginRight="@dimen/widget_margin"
            android:text="@string/country"
            android:textColor="@color/settingTextColor"
            android:textSize="@dimen/setting_text_size"
            />

        <Spinner
            android:id="@+id/spinnerCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/widget_margin_2"
            android:layout_marginLeft="@dimen/widget_margin"
            android:layout_marginRight="@dimen/widget_margin"
            android:prompt="@string/select_country"
            android:spinnerMode="dialog"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/widget_margin"
            android:layout_marginLeft="@dimen/widget_margin"
            android:layout_marginRight="@dimen/widget_margin"
            android:text="@string/role"
            android:textColor="@color/settingTextColor"
            android:textSize="@dimen/setting_text_size"
            />

        <Spinner
            android:id="@+id/spinnerRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/widget_margin_2"
            android:layout_marginLeft="@dimen/widget_margin"
            android:layout_marginRight="@dimen/widget_margin"
            android:prompt="@string/select_role"
            android:spinnerMode="dialog"
            />

        <Button
            android:id="@+id/buttonGo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/setting_button_margin"
            android:layout_marginRight="@dimen/setting_button_margin"
            android:background="@color/settingButtonColor"
            android:paddingBottom="@dimen/setting_button_padding"
            android:paddingTop="@dimen/setting_button_padding"
            android:text="@string/go"
            android:textColor="@android:color/white"
            android:textSize="@dimen/setting_button_text_size"
            android:textStyle="bold"
            />

      </LinearLayout>

    </LinearLayout>

  </android.support.v7.widget.CardView>

</LinearLayout>